<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreActivity"
    android:background="@drawable/gradient">


    <ImageView
        android:id="@+id/porcianu_andreea_diana_iv_icon"
        android:layout_width="112dp"
        android:layout_height="140dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:src="@drawable/icons_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        />


    <TextView
        android:id="@+id/porcianu_andreea_diana_score_tv1"
        style="@style/ScoreStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        app:layout_constraintTop_toBottomOf="@id/porcianu_andreea_diana_iv_icon"
        android:gravity="center"
        android:text="@string/congratulations_your_score_is"
        android:textAlignment="center"
        android:textColor="@color/rosu_sangeriu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        />


    <TextView
        android:id="@+id/porcianu_andreea_diana_score_tv2"
        style="@style/ScoreStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/rosu_sangeriu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/porcianu_andreea_diana_score_tv1" />


    <ImageView
        android:id="@+id/porcianu_andreea_diana_iv_icon2"
        android:layout_width="121dp"
        android:layout_height="103dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:src="@drawable/icons_thumbs_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/porcianu_andreea_diana_score_tv2"


        />
</androidx.constraintlayout.widget.ConstraintLayout>