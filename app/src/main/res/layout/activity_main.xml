<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/hotel_image">

    <TextView
        android:id="@+id/porcianu_andreea_diana_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess the hotel!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351"
        style="@style/QuestionsStyle"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/porcianu_andreea_diana_start_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_quiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="32dp"
        android:background="@drawable/circle"
        android:textColor="@color/red_for_text_start"
        style="@style/StartButtonStyle"
        />




</androidx.constraintlayout.widget.ConstraintLayout>